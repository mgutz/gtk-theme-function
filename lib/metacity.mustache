  <!--<button function="menu" state="prelight" draw_ops="menu_button_prelight"/>-->
  <button function="menu" state="normal" draw_ops="nop"/>
  <button function="menu" state="pressed" draw_ops="nop"/>
  <button function="menu" state="prelight" draw_ops="nop"/>
</frame_style>


<frame_style name="normal_shaded_focused" geometry="normal" parent="normal_focused">
  <piece position="entire_background" draw_ops="bg_window_no_borders"/>
  <!--<piece position="left_titlebar_edge" draw_ops="bg_left_title_shaded"/>-->
  <!--<piece position="right_titlebar_edge" draw_ops="bg_right_title_shaded"/>-->
</frame_style>

