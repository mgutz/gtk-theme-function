<!--<constant name="IconSpacing" value="22"/>-->

<frame_geometry name="normal">
  <distance name="left_width" value="{{border_width}}"/>
  <distance name="right_width" value="{{border_width}}"/>
  <distance name="bottom_height" value="{{border_width}}"/>
  <distance name="left_titlebar_edge" value="3"/>
  <distance name="right_titlebar_edge" value="3"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="0" right="0" top="4" bottom="4"/>
  <border name="button_border" left="1" right="1" top="4" bottom="4"/>
  <aspect_ratio name="button" value="1"/>
</frame_geometry>

<frame_geometry name="no_borders" parent="normal">
  <distance name="left_width" value="0"/>
  <distance name="right_width" value="0"/>
  <distance name="bottom_height" value="0"/>
  <!--<distance name="left_titlebar_edge" value="3"/>-->
  <!--<distance name="right_titlebar_edge" value="3"/>-->
  <!--<border name="title_border" left="0" right="0" top="4" bottom="4"/>-->
  <!--<border name="button_border" left="1" right="1" top="3" bottom="3"/>-->
</frame_geometry>

<frame_geometry name="utility" parent="normal" title_scale="small">
  <distance name="left_width" value="1"/>
  <distance name="right_width" value="1"/>
  <distance name="bottom_height" value="1"/>
  <!--<distance name="left_titlebar_edge" value="3"/>-->
  <!--<distance name="right_titlebar_edge" value="3"/>-->
  <!--<distance name="title_vertical_pad" value="3"/>-->
  <!--<border name="button_border" left="0" right="0" top="0" bottom="0"/>-->
  <border name="title_border" left="0" right="0" top="2" bottom="2"/>
</frame_geometry>

<frame_geometry name="border" has_title="false">
  <distance name="left_width" value="3"/>
  <distance name="right_width" value="3"/>
  <distance name="bottom_height" value="3"/>
  <distance name="left_titlebar_edge" value="0"/>
  <distance name="right_titlebar_edge" value="0"/>
  <distance name="button_width" value="0"/>
  <distance name="button_height" value="0"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="0" right="0" top="0" bottom="0"/>
  <border name="button_border" left="0" right="0" top="0" bottom="0"/>
</frame_geometry>

<draw_ops name="nop">
</draw_ops>


{{#topbar}}
  <gradient type="vertical" x="0" y="0" width="width" height="(title_height+8)/2">
    <color value="GRADIENT0"/>
    <color value="GRADIENT1"/>
  </gradient>
  <gradient type="vertical" x="0" y="(title_height+8)/2" width="width" height="(title_height+8)/2">
    <color value="GRADIENT2"/>
    <color value="GRADIENT3"/>
  </gradient>

  <!-- top hilite -->
  <line color="HILITE" width="1" x1="0" y1="0" x2="width" y2="0"/>

  <!-- bottom hilite -->
  <line color="SHADOW" width="1" x1="0" y1="title_height+8-1" x2="width" y2="title_height+8-1"/>
{{/topbar}}



{{#topbar_small}}
  <gradient type="vertical" x="0" y="0" width="width" height="(title_height+4)/2">
    <color value="GRADIENT0"/>
    <color value="GRADIENT1"/>
  </gradient>
  <gradient type="vertical" x="0" y="(title_height+4)/2" width="width" height="(title_height+4)/2">
    <color value="GRADIENT2"/>
    <color value="GRADIENT3"/>
  </gradient>

  <!-- highlight -->
  <line color="HILITE" width="1" x1="0" y1="0" x2="width" y2="0"/>
  <!--<line color="#adadad" width="1" x1="0" y1="title_height+4-2" x2="width" y2="title_height+4-1"/>-->
  <!-- shadow -->
  <line color="SHADOW" width="1" x1="0" y1="title_height+4-1" x2="width" y2="title_height+4-1"/>
{{/topbar_small}}


<draw_ops name="bg_topbar_max">
    <include name="bg_topbar_focused"/>
</draw_ops>

<draw_ops name="bg_top_title">
</draw_ops>


<draw_ops name="bg_left_title">
</draw_ops>

<draw_ops name="bg_left_title_shaded">
</draw_ops>

<draw_ops name="bg_right_title">
</draw_ops>

<draw_ops name="bg_right_title_shaded">
</draw_ops>


<draw_ops name="bg_borders">
</draw_ops>

<draw_ops name="outline">
    <rectangle color="gtk:bg[NORMAL]" filled="true" width="{{border_width}}" height="height-(title_height+8)-1" x="0" y="title_height+8"/>
    
    <rectangle color="gtk:bg[NORMAL]" filled="true" width="{{border_width}}" height="height-(title_height+8)-1" x="width-{{border_width}}" y="title_height+8"/>
    
    <rectangle color="gtk:bg[NORMAL]" filled="true" width="width" height="{{border_width}}" x="0" y="height-{{border_width}}"/>

</draw_ops>

<draw_ops name="outline_unfocused">
    <rectangle color="gtk:bg[NORMAL]" filled="true" width="{{border_width}}" height="height-title_height+8" x="0" y="title_height+8"/>
    <rectangle color="gtk:bg[NORMAL]" filled="true" width="{{border_width}}" height="height-title_height+8" x="width-{{border_width}}" y="title_height+8"/>
    <rectangle color="gtk:bg[NORMAL]" filled="true" width="width" height="{{border_width}}" x="0" y="height-{{border_width}}"/>
</draw_ops>

<draw_ops name="botton_outline">
    <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="0" y1="0" x2="width" y2="0"/>
</draw_ops>

<draw_ops name="bg_window_no_borders">
  <include name="bg_topbar_focused"/>
</draw_ops>

<draw_ops name="bg_window_no_borders_unfocused">
  <include name="bg_topbar_unfocused"/>
</draw_ops>

<draw_ops name="bg_window_borders">
  <include name="bg_window_no_borders"/>
  <include name="outline"/>
</draw_ops>

<draw_ops name="bg_window_borders_unfocused">
  <include name="bg_window_no_borders_unfocused"/>
  <include name="outline"/>
</draw_ops>

<constant name="ButtonPad" value="4"/>
<constant name="PrelightPad" value="3"/>

<draw_ops name="bg_button">
</draw_ops>

<draw_ops name="bg_button_prelight">
</draw_ops>

<draw_ops name="bg_button_pressed">
</draw_ops>


{{#menu_button}}
    <rectangle color="HILITE" x="1" y="(height-5)/2+1" width="mini_icon_width-2" height="5" filled="false" />
    <rectangle color="COLOR" x="1" y="(height-5)/2" width="mini_icon_width-2" height="5" filled="false" />
{{/menu_button}}


{{#minimize_button}}
  <!-- hilite -->
  <line color="HILITE" width="2" x1="(width-8)/2" y1="(height-6)/2 + 6 + 1 + 1" x2="(width-8)/2 + 8" y2="(height-6)/2 + 6 + 1 + 1"/>

  <line color="COLOR" width="2" x1="(width-8)/2" y1="(height-6)/2 + 6 + 1" x2="(width-8)/2 + 8" y2="(height-6)/2 + 6 + 1"/>
{{/minimize_button}}


{{#maximize_button}}
  <rectangle color="HILITE" x="(width-6)/2 - 1" y="(height-6)/2 - 1 + 1" width="8" height="8"/>
  <rectangle color="HILITE" x="(width-6)/2" y="(height-6)/2 + 1" width="6" height="6"/>


  <rectangle color="COLOR" x="(width-6)/2 - 1" y="(height-6)/2 - 1" width="8" height="8"/>
  <rectangle color="COLOR" x="(width-6)/2" y="(height-6)/2" width="6" height="6"/>
{{/maximize_button}}


{{#restore_button}}
  <rectangle color="HILITE" x="(width-6)/2 - 1" y="(height-6)/2 - 1 + 1" width="8" height="8"/>
  <rectangle color="HILITE" x="(width-6)/2" y="(height-6)/2 + 1" width="6" height="6"/>

  <line color="HILITE" width="2" x1="(width-6)/2 - 1 + 2" y1="(height-6)/2 - 1 - 2 + 1" x2="(width-6)/2 - 1 + 2 + 8" y2="(height-6)/2 - 1 - 2 + 1"/>
  <line color="HILITE" width="2" x1="(width-6)/2 - 1 + 2 + 8 + 1" y1="(height-6)/2 - 1 - 2 - 1 + 1" x2="(width-6)/2 - 1 + 2 + 8 + 1" y2="(height-6)/2 - 1 - 2 + 8 + 1 + 1"/>

  <rectangle color="COLOR" x="(width-6)/2 - 1" y="(height-6)/2 - 1" width="8" height="8"/>
  <rectangle color="COLOR" x="(width-6)/2" y="(height-6)/2" width="6" height="6"/>

  <line color="COLOR" width="2" x1="(width-6)/2 - 1 + 2" y1="(height-6)/2 - 1 - 2" x2="(width-6)/2 - 1 + 2 + 8" y2="(height-6)/2 - 1 - 2"/>
  <line color="COLOR" width="2" x1="(width-6)/2 - 1 + 2 + 8 + 1" y1="(height-6)/2 - 1 - 2 - 1" x2="(width-6)/2 - 1 + 2 + 8 + 1" y2="(height-6)/2 - 1 - 2 + 8 + 1"/>
{{/restore_button}}

   <!--
     <line color="HILITE" width="2" x1="" y1="" x2="" y2=""/>
   -->

{{#close_button}}
    <!-- inset -->
    <line color="HILITE" width="2" x1="(width-6)/2"     y1="(height-6)/2 + 1"     x2="(width-6)/2 + 6" y2="(height-6)/2 + 6 + 1"/>
    <line color="HILITE" width="1"  x1="(width-6)/2 + 6" y1="(height-6)/2 + 6 + 1" x2="(width-6)/2 + 7" y2="(height-6)/2 + 6 + 1"/> <!-- cap bottom right -->
    <line color="HILITE" width="2" x1="(width-6)/2"     y1="(height-6)/2 + 6 + 1" x2="(width-6)/2 + 6" y2="(height-6)/2 + 1"/>
    <line color="HILITE" width="1"   x1="(width-6)/2 + 6" y1="(height-6)/2 + 0 + 1"     x2="(width-6)/2 + 7" y2="(height-6)/2 + 1"/> <!-- cap top right -->

    <!-- glyph -->
    <line color="COLOR" width="2" x1="(width-6)/2"     y1="(height-6)/2"     x2="(width-6)/2 + 6" y2="(height-6)/2 + 6"/>
    <line color="COLOR" width="1"  x1="(width-6)/2 + 6" y1="(height-6)/2 + 6" x2="(width-6)/2 + 7" y2="(height-6)/2 + 6"/> <!-- cap bottom right -->
    <line color="COLOR" width="2" x1="(width-6)/2"     y1="(height-6)/2 + 6" x2="(width-6)/2 + 6" y2="(height-6)/2"/>
    <line color="COLOR" width="1"   x1="(width-6)/2 + 6" y1="(height-6)/2 + 0"     x2="(width-6)/2 + 7" y2="(height-6)/2"/> <!-- cap top right -->
{{/close_button}}



{{#title}}
    <clip x="0" y="0" width="width" height="height"/>
    <title color="HILITE" x="(width - title_width) / 2" y="(height - title_height) / 2 + 1"/>
    <title color="COLOR" x="(width - title_width) / 2" y="(height - title_height) / 2"/>
{{/title}}


<frame_style name="normal_focused" geometry="normal">
