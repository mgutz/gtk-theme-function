  <!--<button function="menu" state="prelight" draw_ops="menu_button_unfocused_prelight"/>-->

  <button function="menu" state="normal" draw_ops="nop"/>
  <button function="menu" state="pressed" draw_ops="nop"/>
  <button function="menu" state="prelight" draw_ops="nop"/>
</frame_style>

<frame_style name="normal_shaded_unfocused" geometry="normal" parent="normal_unfocused">
  <piece position="entire_background" draw_ops="bg_window_no_borders"/>
  <!--<piece position="left_titlebar_edge" draw_ops="bg_left_title_shaded"/>-->
  <!--<piece position="right_titlebar_edge" draw_ops="bg_right_title_shaded"/>-->
</frame_style>

<frame_style name="maximized_focused" geometry="no_borders" parent="normal_focused">
  <piece position="entire_background" draw_ops="bg_topbar_max"/>
  <!--<piece position="top_titlebar_edge" draw_ops="bg_top_title"/>-->
  <!--<piece position="left_titlebar_edge" draw_ops="nop"/>-->
  <!--<piece position="right_titlebar_edge" draw_ops="nop"/>-->
