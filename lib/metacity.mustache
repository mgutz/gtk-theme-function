  <button function="maximize" state="normal" draw_ops="restore_button_normal"/>
  <button function="maximize" state="pressed" draw_ops="restore_button_pressed"/>
  <button function="maximize" state="prelight" draw_ops="restore_button_prelight"/>
</frame_style>

<frame_style name="maximized_shaded_focused" geometry="no_borders" parent="maximized_focused">
  <piece position="bottom_titlebar_edge" draw_ops="botton_outline"/>
</frame_style>

<frame_style name="maximized_unfocused" geometry="no_borders" parent="normal_unfocused">
  <piece position="entire_background" draw_ops="bg_topbar_unfocused"/>
  <!--<piece position="left_titlebar_edge" draw_ops="nop"/>-->
  <!--<piece position="right_titlebar_edge" draw_ops="nop"/>-->
  <button function="maximize" state="normal" draw_ops="restore_button_unfocused_normal"/>
